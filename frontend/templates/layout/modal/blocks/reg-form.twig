<form class="{{ overrideClassRegForm }} su-reg-form">
	<div class="su-login-form_text">Или введите:</div>
	<div class="su-reg-form_name su-field-text">
		<input id="input-text" class="su-field-text_input" type="text" name="#" placeholder="Ваше имя и фамилия" required="">
		<span class="su-field-text_error">Текст ошибки</span>
	</div>
	<div class="su-reg-form_row">
		<div class="su-reg-form_email su-field-text">
			<input id="input-text" class="su-field-text_input" type="text" name="#" placeholder="Email" required="">
			<span class="su-field-text_error">Текст ошибки</span>
		</div>
		<div class="su-reg-form_password su-field-text">
			<input id="input-text" class="su-field-text_input" type="password" name="#" placeholder="Придумайте пароль" required="">
			<span class="su-field-text_error">Текст ошибки</span>
		</div>
	</div>
	<div class="su-reg-form_button su-block">
		<button class="su-block_element su-btn">{{ textButton }}</button>
	</div>
</form>