{% if typeTwig == 'php' %}
	{% set pathTile = 'templates/pages/blocks/' %}
{% endif %}

<div class="{{ overrideClassTile }} su-tile">

	{% if tileTitle %}
		<h2 class="su-tile_title">{{ tileTitle }}</h2>
	{% endif %}

	{% if tileSearch %}
		<div class="su-tile-search">
			<form class="su-tile-search_form" action="#" method="post">
				<div class="su-tile-search_line su-field-search">
					<input class="su-field-search_input" type="search" name="" placeholder="Найти" value="">
					<span class="su-field-search_postfix"></span>
				</div>
				<div class="su-tile-search-popup">
					{% for row in searchPopup %}
						<div class="su-tile-search-popup_row">
							<div class="su-tile-search-popup_name">{{ row.name }}</div>
							<div class="su-tile-search-popup_quantity">{{ row.quantity }}</div>
						</div>
					{% endfor %}
				</div>
			</form>
		</div>
	{% endif %}

	<ul class="su-tile_list su-list">

		{% for row in dataTile %}
			<li class="su-list_item">

				{% if onlyTile %}
					<div class="su-tile-block">
						<div class="su-tile-block_img su-block">
							<img class="su-block_element" src="{{ row.src }}" alt="">
						</div>
						<div class="su-tile-block_title su-block">
							<a class="su-block_element" href="{{ row.href }}">{{ row.title }}</a>
						</div>
					</div>
				{% else %}
					{% include pathTile~'offer.twig' with {overrideClassOffer: 'su-list_offer'} %}
				{% endif %}

			</li>
		{% endfor %}

	</ul>

	{% if tileMore %}
		<div class="su-tile_more su-block">
			<a class="su-block_element su-more" href="#">{{ tileMore }}</a>
		</div>
	{% endif %}

	{% if tileSearch %}
		{% include pathTile~'pagination.twig' with {overrideClassPagination: 'su-tile_pagination'} %}
	{% endif %}

</div>