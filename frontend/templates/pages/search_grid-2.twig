{% if typeTwig == 'php' %}
	{% set pathSearch = 'templates/pages/' %}
	{% set pathSearchPopup = 'templates/' %}
{% else %}
	{% set pathSearchPopup = '../' %}
{% endif %}

{% extends (typeTwig == 'php') ? 'templates/layout/template_grid-2.twig' : '../layout/template_grid-2.twig' %}


{% block content %}

	<div class="su-search">
		{% include pathSearch~'blocks/tile.twig' with {overrideClassTile: 'su-search_offer', tileSearch: true, dataTile: searchResults} %}
	</div>

{% endblock %}

{% block wrapper_popup %}

	{% include pathSearchPopup~'layout/popup/popup-search.twig' %}

{% endblock %}

{% block script %}
	{{ parent() }}
	<!-- СКРИПТЫ ДЛЯ ВЕРСТКИ -->
	<script>
		//------------------------------------------------------------
		// ИНИЦИАЛИЗАЦИЯ СЛАЙДЕРА
		$('#slider').nivoSlider({
			effect: 'random',
			slices: 10,
			boxCols: 6,
			boxRows: 4,
			animSpeed: 1500,
			pauseTime: 5000,
			directionNav: true,
			directionNavHide: false,
			controlNav: false,
			keyboardNav: false,
			pauseOnHover: true,
			captionOpacity: 0.8,
			prevText: '',
			nextText: ''
		});
		//------------------------------------------------------------
	</script>
	<!-- /СКРИПТЫ ДЛЯ ВЕРСТКИ -->
{% endblock %}