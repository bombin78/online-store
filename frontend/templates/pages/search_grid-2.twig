{% if typeTwig == 'php' %}
	{% set pathSearch = 'templates/' %}
{% else %}
	{% set pathSearch = '../' %}
{% endif %}

{% extends (typeTwig == 'php') ? 'templates/layout/connect/grid-2.twig' : '../layout/connect/grid-2.twig' %}


{% block content %}

	<div class="su-search">
		{% include pathSearch~'pages-common/modules/tile-offers.twig'
			with {
				overrideClassTile: 'su-search_offer',
				tileSearch: true,
				dataTile: searchResults,
				tilePagination: true
			}
		%}
	</div>

{% endblock %}

{% block script %}
	{{ parent() }}
	<!-- СКРИПТЫ ДЛЯ ВЕРСТКИ -->
	<script>
		//------------------------------------------------------------
		// ИНИЦИАЛИЗАЦИЯ СЛАЙДЕРА
		$('#slider').nivoSlider({
			effect: 'random',
			slices: 10,
			boxCols: 6,
			boxRows: 4,
			animSpeed: 1500,
			pauseTime: 5000,
			directionNav: true,
			directionNavHide: false,
			controlNav: false,
			keyboardNav: false,
			pauseOnHover: true,
			captionOpacity: 0.8,
			prevText: '',
			nextText: ''
		});
		//------------------------------------------------------------
	</script>
	<!-- /СКРИПТЫ ДЛЯ ВЕРСТКИ -->
{% endblock %}